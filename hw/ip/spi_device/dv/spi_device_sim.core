name: "lowrisc:dv:spi_device_sim:0.1"
description: "spi_device DV sim target"
filesets:
  files_rtl:
    depend:
      - lowrisc:ip:spi_device:0.1

  files_dv:
    depend:
      - lowrisc:dv:spi_device_test
      - lowrisc:dv:spi_device_sva
    files:
      - tb/tb.sv
    file_type: systemVerilogSource

targets:
  sim: &sim_target
    toplevel: tb
    filesets:
      - files_rtl
      - files_dv
    default_tool: vcs

  lint:
    <<: *sim_target
