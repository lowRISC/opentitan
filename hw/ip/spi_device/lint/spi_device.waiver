waive -rules RESET_DRIVER -location {spi_device.sv} \
      -regexp {'tpm_rst_out_sync_n' is driven by instance 'u_tpm_rst_out_sync' of module 'prim_flop', and used as an asynchronous reset 'rst_out_ni'} \
