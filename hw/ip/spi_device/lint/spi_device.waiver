waive -rules RESET_DRIVER -location {spi_device.sv} \
      -regexp {'rst_spi_out_sync_n' is driven by instance 'u_rst_spi_out_sync' of module 'prim_flop', and used as an asynchronous reset 'rst_spi_out_n'} \
