name: "lowrisc:dv:sysrst_ctrl_sim:0.1"
description: "SYSRST_CTRL DV sim target"
filesets:
  files_rtl:
    depend:
      - lowrisc:ip:sysrst_ctrl

  files_dv:
    depend:
      - lowrisc:dv:sysrst_ctrl_test
      - lowrisc:dv:sysrst_ctrl_sva
      - lowrisc:dv:sysrst_ctrl_cov
    files:
      - tb.sv
    file_type: systemVerilogSource

targets:
  sim: &sim_target
    toplevel: tb
    filesets:
      - files_rtl
      - files_dv
    default_tool: vcs

  # TODO: add a lint check cfg in `hw/top_earlgrey/lint/top_earlgrey_dv_lint_cfgs.hjson`
  lint:
    <<: *sim_target
