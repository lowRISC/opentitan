name: "lowrisc:dv:aes_sva:0.1"
description: "AES assertion modules and bind file."
filesets:
  files_dv:
    depend:
      - lowrisc:tlul:headers
      - lowrisc:fpv:csr_assert_gen
      - lowrisc:ip:aes
    files:
      - aes_bind.sv
      - aes_idle_check.sv
      - aes_reseed_if.sv
      - aes_masking_reseed_if.sv
    file_type: systemVerilogSource

  files_formal:
    depend:
      - lowrisc:ip:aes

generate:
  csr_assert_gen:
    generator: csr_assert_gen
    parameters:
      spec: ../../data/aes.hjson

targets:
  default: &default_target
    filesets:
      - files_dv
    generate:
      - csr_assert_gen

  formal:
    <<: *default_target
    filesets:
      - files_formal
      - files_dv
    toplevel: aes
