name: "lowrisc:dv:lc_ctrl_sim:0.1"
description: "LC_CTRL DV sim target"
filesets:
  files_rtl:
    depend:
      - lowrisc:ip:lc_ctrl

  files_dv:
    depend:
      - lowrisc:dv:lc_ctrl_test
      - lowrisc:dv:lc_ctrl_sva
    files:
      - tb.sv
    file_type: systemVerilogSource

targets:
  sim: &sim_target
    toplevel: tb
    filesets:
      - files_rtl
      - files_dv
    default_tool: vcs

  lint:
    <<: *sim_target
