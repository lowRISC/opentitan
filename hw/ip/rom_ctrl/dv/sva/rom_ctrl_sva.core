name: "lowrisc:dv:rom_ctrl_sva:0.1"
description: "ROM_CTRL assertion modules and bind file."
filesets:
  files_dv:
    depend:
      - lowrisc:tlul:headers
      - lowrisc:fpv:csr_assert_gen
    files:
      - rom_ctrl_bind.sv
    file_type: systemVerilogSource

  files_formal:
    depend:
      - lowrisc:ip:rom_ctrl

generate:
  csr_assert_gen:
    generator: csr_assert_gen
    parameters:
      spec: ../../data/rom_ctrl.hjson

targets:
  default: &default_target
    filesets:
      - files_dv
    generate:
      - csr_assert_gen
  formal:
    <<: *default_target
    filesets:
      - files_formal
      - files_dv
    toplevel: rom_ctrl
