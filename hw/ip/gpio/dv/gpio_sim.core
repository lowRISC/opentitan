name: "lowrisc:dv:gpio_sim:0.1"
description: "GPIO DV sim target"
filesets:
  files_rtl:
    depend:
      - lowrisc:ip:gpio:0.1

  files_dv:
    depend:
      - lowrisc:dv:gpio_test
      - lowrisc:dv:gpio_sva
    files:
      - tb/tb.sv
    file_type: systemVerilogSource

targets:
  sim: &sim_target
    toplevel: tb
    filesets:
      - files_rtl
      - files_dv
    default_tool: vcs

  lint:
    <<: *sim_target
