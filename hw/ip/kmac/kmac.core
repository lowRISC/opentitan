name: "lowrisc:ip:kmac:0.1"
description: "KMAC/SHA3"

filesets:
  files_rtl:
    depend:
      - lowrisc:ip:tlul
      - lowrisc:prim:all
      - lowrisc:ip:keymgr_pkg
    files:
      - rtl/kmac_reg_pkg.sv
      - rtl/kmac_reg_top.sv
      - rtl/kmac_pkg.sv
      - rtl/kmac.sv
    file_type: systemVerilogSource

parameters:
  SYNTHESIS:
    datatype: bool
    paramtype: vlogdefine

targets:
  default: &default_target
    filesets:
      - files_rtl
    toplevel: kmac

  lint:
    <<: *default_target
    default_tool: verilator
    parameters:
      - SYNTHESIS=true
    tools:
      ascentlint:
        ascentlint_options:
          - "-wait_license"
      verilator:
        mode: lint-only
        verilator_options:
          - "-Wall"


