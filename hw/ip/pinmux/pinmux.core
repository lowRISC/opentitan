name: "lowrisc:ip:pinmux:0.1"
description: "Pin Multiplexer"

filesets:
  files_rtl:
    depend:
      - lowrisc:ip:pinmux_reg
      - lowrisc:ip:pinmux_component

parameters:
  SYNTHESIS:
    datatype: bool
    paramtype: vlogdefine


targets:
  default: &default_target
    filesets:
      - files_rtl
    toplevel: pinmux

  lint:
    <<: *default_target
    default_tool: verilator
    parameters:
      - SYNTHESIS=true
    tools:
      verilator:
        mode: lint-only
        verilator_options:
          - "-Wall"


