filesets:
  files_fpv:
    depend:
      - lowrisc:prim:all
      - lowrisc:ip:tlul
      - lowrisc:ip:pinmux
    files:
      - vip/pinmux_assert_fpv.sv
      - tb/pinmux_bind_fpv.sv
      - tb/pinmux_fpv.sv
