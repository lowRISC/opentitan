name: "lowrisc:dv:pwrmgr_sim:0.1"
description: "PWRMGR DV sim target"
filesets:
  files_rtl:
    depend:
      - lowrisc:ip:pwrmgr

  files_dv:
    depend:
      - lowrisc:dv:pwrmgr_test
      - lowrisc:dv:pwrmgr_sva
    files:
      - tb.sv
    file_type: systemVerilogSource

targets:
  sim: &sim_target
    toplevel: tb
    filesets:
      - files_rtl
      - files_dv
    default_tool: vcs

  # TODO: add a lint check cfg in `hw/top_earlgrey/lint/top_earlgrey_dv_lint_cfgs.hjson`
  lint:
    <<: *sim_target
