name: lowrisc:verbano_dv:flash_ctrl_sim:0.1
description: "FLASH_CTRL DV sim target"
filesets:
  files_rtl:
    depend:
      - lowrisc:ip:tlul
      - lowrisc:verbano_constants:top_pkg
      - lowrisc:verbano_ip:flash_ctrl:0.1
    file_type: systemVerilogSource

  files_dv:
    depend:
      - lowrisc:verbano_dv:flash_ctrl_bkdr_util
      - lowrisc:verbano_dv:flash_ctrl_test
      - lowrisc:verbano_dv:flash_ctrl_sva
      - lowrisc:verbano_dv:flash_ctrl_cov
    files:
      - tb/tb.sv
    file_type: systemVerilogSource

targets:
  default: &default_target
    toplevel: tb
    filesets:
      - files_rtl
      - files_dv

  sim:
    <<: *default_target
    default_tool: vcs

  lint:
    <<: *default_target
    default_tool: vcs
