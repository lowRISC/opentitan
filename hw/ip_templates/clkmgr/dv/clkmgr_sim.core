name: "lowrisc:dv:clkmgr_sim:0.1" # TODO: needs templating
description: "CLKMGR DV sim target"
filesets:
  files_rtl:
    depend:
      - lowrisc:ip_interfaces:clkmgr

  files_dv:
    depend:
      - lowrisc:dv:clkmgr_test # TODO: needs templating
      - lowrisc:dv:clkmgr_sva
    files:
      - tb.sv
      - cov/clkmgr_cov_bind.sv
    file_type: systemVerilogSource

targets:
  sim: &sim_target
    toplevel: tb
    filesets:
      - files_rtl
      - files_dv
    default_tool: vcs

  lint:
    <<: *sim_target
