      - lowrisc:dv:dv_utils
      - lowrisc:dv:dv_lib
      - lowrisc:dv:jtag_agent
    files:
      - jtag_riscv_agent_pkg.sv
      - jtag_riscv_agent_cfg.sv: {is_include_file: true}
      - jtag_riscv_agent_cov.sv: {is_include_file: true}
