name: "lowrisc:dv:ast_adc_agent:0.1"
description: "AST_ADC DV UVM agent"
filesets:
  files_rtl:
    depend:
      - lowrisc:ip:adc_ctrl
  files_dv:
    depend:
      - lowrisc:dv:dv_utils
      - lowrisc:dv:dv_lib
    files:
      - ast_adc_if.sv
      - ast_adc_agent_pkg.sv
      - ast_adc_item.sv: {is_include_file: true}
      - ast_adc_agent_cfg.sv: {is_include_file: true}
      - ast_adc_agent_cov.sv: {is_include_file: true}
      - ast_adc_driver.sv: {is_include_file: true}
      - ast_adc_monitor.sv: {is_include_file: true}
      - ast_adc_agent.sv: {is_include_file: true}
      - seq_lib/ast_adc_base_seq.sv: {is_include_file: true}
      - seq_lib/ast_adc_all_random_seq.sv: {is_include_file: true}
      - seq_lib/ast_adc_random_ramp_seq.sv: {is_include_file: true}
      - seq_lib/ast_adc_seq_list.sv: {is_include_file: true}
    file_type: systemVerilogSource

targets:
  default:
    filesets:
      - files_rtl
      - files_dv
