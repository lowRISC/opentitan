name: "lowrisc:systems:top_earlgrey_artys7-50:0.1"
description: "Earl Grey toplevel for the Arty S7-50 board"
filesets:
  files_rtl_artys7:
    depend:
      - lowrisc:systems:top_earlgrey:0.1
    files:
      - rtl/clkgen_xil7series.sv
      - rtl/top_earlgrey_artys7.sv
    file_type: systemVerilogSource

  files_constraints:
    files:
      - data/pins_artys7.xdc
    file_type: xdc

parameters:
  # XXX: This parameter needs to be absolute, or relative to the *.runs/synth_1
  # directory. It's best to pass it as absolute path when invoking fusesoc, e.g.
  # --SRAM_INIT_FILE=$PWD/sw/device/examples/hello_world/hello_world.vmem
  # XXX: The VMEM file should be added to the sources of the Vivado project to
  # make the Vivado dependency tracking work. However this requires changes to
  # fusesoc first.
  ROM_INIT_FILE:
    datatype: str
    description: ROM initialization file in vmem hex format
    default: "../../../../../build-bin/sw/device/boot_rom/boot_rom_fpga_artys7.32.vmem"
    paramtype: vlogdefine
  # For value definition, please see ip/prim/rtl/prim_pkg.sv
  PRIM_DEFAULT_IMPL:
    datatype: str
    paramtype: vlogdefine
    description: Primitives implementation to use, e.g. "prim_pkg::ImplGeneric".
  # XXX: This allows us to set the define used for flash configuration
  # Long term this replication should actually not be necessary:
  # https://github.com/olofk/fusesoc/issues/401
  FLASH_PAGES_PER_BANK:
    datatype: int
    paramtype: vlogdefine

targets:
  synth:
    default_tool: vivado
    filesets:
      - files_rtl_artys7
      - files_constraints
    toplevel: top_earlgrey_artys7
    parameters:
      - ROM_INIT_FILE
      - PRIM_DEFAULT_IMPL=prim_pkg::ImplXilinx
      - FLASH_PAGES_PER_BANK=8
    tools:
      vivado:
        part: "xc7s50csga324-1" # Arty S7-50
