name: "lowrisc:systems:padring:0.1"
description: "Chip-level padring instance"

filesets:
  files_rtl:
    depend:
      - lowrisc:prim:mubi
      - lowrisc:prim:pad_wrapper_pkg
      - lowrisc:systems:top_earlgrey_pkg
      - "!fileset_partner ? (lowrisc:systems:physical_pads)"
      - "fileset_partner ? (partner:systems:physical_pads)"
    files:
      - rtl/padring.sv
    file_type: systemVerilogSource

  files_verilator_waiver:
    depend:
      # common waivers
      - lowrisc:lint:common
      - lowrisc:lint:comportable

  files_ascentlint_waiver:
    depend:
      # common waivers
      - lowrisc:lint:common
      - lowrisc:lint:comportable
    files:
      - lint/padring.waiver
    file_type: waiver

  files_veriblelint_waiver:
    depend:
      # common waivers
      - lowrisc:lint:common
      - lowrisc:lint:comportable

targets:
  default: &default_target
    filesets:
      - tool_verilator   ? (files_verilator_waiver)
      - tool_ascentlint  ? (files_ascentlint_waiver)
      - tool_veriblelint ? (files_veriblelint_waiver)
      - files_rtl
