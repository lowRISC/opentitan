      top_hjson: ../../data/top_earlgrey.hjson
  debug_mem_ral:
    generator: ralgen
    parameters:
      name: rv_dm_debug_mem
      ip_hjson: ../../../ip/rv_dm/data/rv_dm_debug_mem.hjson

targets:
  default:
    filesets:
      - files_dv
    generate:
      - "!skip_ral_gen ? (ral)"
      - "!skip_ral_gen ? (debug_mem_ral)"
