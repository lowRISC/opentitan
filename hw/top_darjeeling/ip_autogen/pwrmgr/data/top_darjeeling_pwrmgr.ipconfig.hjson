{
  instance_name: top_darjeeling_pwrmgr
  param_values:
  {
    NumWkups: 4
    Wkups:
    [
      {
        name: pin_wkup_req
        width: "1"
        module: pinmux_aon
      }
      {
        name: wkup_req
        width: "1"
        module: aon_timer_aon
      }
      {
        name: wkup_internal_req
        width: "1"
        module: soc_proxy
      }
      {
        name: wkup_external_req
        width: "1"
        module: soc_proxy
      }
    ]
    NumRstReqs: 2
    rst_reqs:
    {
      int:
      [
        {
          name: MainPwr
          desc: main power glitch reset request
          module: pwrmgr_aon
        }
        {
          name: Esc
          desc: escalation reset request
          module: alert_handler
        }
      ]
      debug:
      [
        {
          name: Ndm
          desc: non-debug-module reset request
          module: rv_dm
        }
      ]
      peripheral:
      [
        {
          name: aon_timer_rst_req
          width: "1"
          module: aon_timer_aon
          desc: watchdog reset requestt
        }
        {
          name: rst_req_external
          width: "1"
          module: soc_proxy
          desc: External reset request
        }
      ]
    }
    wait_for_external_reset: true
    NumRomInputs: 3
    top_pkg_vlnv: lowrisc:constants:top_darjeeling_top_pkg
    topname: darjeeling
    uniquified_modules:
    {
      gpio: gpio
      racl_ctrl: racl_ctrl
      ac_range_check: ac_range_check
      alert_handler: alert_handler
      rv_plic: rv_plic
    }
  }
}
