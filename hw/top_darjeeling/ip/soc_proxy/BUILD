package(default_visibility = ["//visibility:public"])

filegroup(
    name = "all_files",
    srcs = glob(["**"]) + [
        "//hw/top_darjeeling/ip/soc_proxy/data:all_files",
    ],
)

filegroup(
    name = "rtl_files",
    srcs = glob(
        ["**"],
        exclude = [
            "dv/**",
            "doc/**",
            "README.md",
        ],
    ),
)

filegroup(
    name = "doc_files",
    srcs = glob(["**/*.md"]),
)
