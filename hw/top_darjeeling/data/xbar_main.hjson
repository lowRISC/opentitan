      pipeline:   false,
    },
    { name:       "mbx0.sram",
      type:       "host",
      addr_space: "hart",
      clock:      "clk_main_i",
      reset:      "rst_main_ni",
      pipeline:   false,
    },
    { name:       "mbx1.core",
      type:       "device",
      addr_space: "hart",
      clock:      "clk_main_i",
      reset:      "rst_main_ni",
      pipeline:   false,
    },
    { name:       "mbx1.sram",
      type:       "host",
      addr_space: "hart",
      clock:      "clk_main_i",
      reset:      "rst_main_ni",
      pipeline:   false,
    },
    { name:       "mbx2.core",
